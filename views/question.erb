<h1> <%= @question.name %></h1>
<br>

<form action="/survey/<%=@question.survey_id()%>" method="post">
  <input name="_method" type="hidden" value="delete">

  <div class="form-group">
    <button type="submit" class="btn-danger">Delete Question</button>
  </div>
</form>
<br>
<h4>Change Question</h4>

<form action="/question/<%=@question.id()%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <input name="name" id="name" type="text">
    <button type="submit" class="btn-success">Change your Question</button>
  </div>
</form>

<br><br>

  <h3>Respond to this Question</h3>

  <form action="/question/<%=@question.id()%>" method="post">
    <div class="form-group">
      <input name="input" id="input" type="text">

      <button type="submit" class="btn-success">Add Response</button>
    </div>
  </form>

  <h3>All the Responses for this Question</h3>

  <ul>
    <% @question.responses.each do |response| %>
      <li><%= response.input()%></li>
    <% end %>
  </ul>


  <br><br>
  <h5><a href="/" >Return to main page</a></h5>
